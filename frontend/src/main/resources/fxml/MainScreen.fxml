<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../styles/styles.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.unisoftware.gestioncurricular.frontend.controller.MainScreenController">
    <top>
        <VBox alignment="CENTER" spacing="6.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Gestión Curricular" styleClass="main-title"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button fx:id="logoutButton" text="Cerrar sesión" onAction="#handleLogout"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TabPane fx:id="tabPanePrincipal">
            <tabs>
                <Tab text="Programas">
                    <VBox spacing="10.0">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <children>
                            <TableView fx:id="programTableView">
                                <columns>
                                    <TableColumn fx:id="colProgramId"         text="ID"               prefWidth="60"/>
                                    <TableColumn fx:id="colProgramName"       text="Nombre"           prefWidth="150"/>
                                    <TableColumn fx:id="colPerfilProfesional" text="Perfil Profesional" prefWidth="180"/>
                                    <TableColumn fx:id="colPerfilOcupacional" text="Perfil Ocupacional" prefWidth="180"/>
                                    <TableColumn fx:id="colPerfilIngreso"     text="Perfil Ingreso" prefWidth="140"/>
                                    <TableColumn fx:id="colCompetencias"      text="Competencias" prefWidth="180"/>
                                    <TableColumn fx:id="colDuration"          text="Duración" prefWidth="80"/>
                                    <TableColumn fx:id="colAwardingDegree"    text="Grado"    prefWidth="140"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                <Tab text="Cursos">
                    <VBox spacing="10.0">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <children>
                            <TableView fx:id="courseTableView">
                                <columns>
                                    <TableColumn fx:id="colCourseId"      text="ID"      prefWidth="60"/>
                                    <TableColumn fx:id="colCourseName"    text="Nombre"  prefWidth="150"/>
                                    <TableColumn fx:id="colCourseType"    text="Tipo"    prefWidth="80"/>
                                    <TableColumn fx:id="colCourseCredits" text="Créditos" prefWidth="70"/>
                                    <TableColumn fx:id="colCourseRelation" text="Relación" prefWidth="90"/>
                                    <TableColumn fx:id="colCourseArea"    text="Área"     prefWidth="110"/>
                                    <TableColumn fx:id="colCourseCycle"   text="Ciclo"    prefWidth="100"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0" BorderPane.alignment="BOTTOM_RIGHT" styleClass="footer-pane">
            <children>
                <Label text="Universidad Ejemplo © 2024" />
            </children>
        </HBox>
    </bottom>
</BorderPane>